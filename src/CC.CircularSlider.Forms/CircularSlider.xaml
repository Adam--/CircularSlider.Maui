<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:tt="clr-namespace:TouchTracking.Forms;assembly=TouchTracking.Forms"
             x:Name="self"
             x:Class="CC.CircularSlider">
    <ContentView.Content>
        <Grid>
            <views:SKCanvasView x:Name="canvas" PaintSurface="CanvasOnPaintSurface" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <views:SKCanvasView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </views:SKCanvasView.GestureRecognizers>
            </views:SKCanvasView>
            <Grid.Effects>
                <tt:TouchEffect Capture="True" TouchAction="TouchEffect_TouchAction" />
            </Grid.Effects>
        </Grid>
    </ContentView.Content>
</ContentView>  